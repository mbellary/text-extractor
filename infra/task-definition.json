{
  "family": "worker-extractor-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::226403923581:role/unstruct_ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::226403923581:role/ecsTaskRole-workers",
  "containerDefinitions": [
    {
      "name": "worker-extractor-container",
      "image": "public.ecr.aws/amazonlinux/amazonlinux:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 80, "protocol": "tcp" }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/worker-extractor-logs",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "worker-extractor-logs"
        }
      },
      "environment": [
        { "name": "ENV", "value": "production" },
         {
          "name": "GOOGLE_APPLICATION_CREDENTIALS",
          "value": "/app/secrets/gcp-key.json"
        }
      ],
      "secrets": [
        {
          "name": "GOOGLE_APPLICATION_CREDENTIALS_JSON",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:226403923581:secret:gcp/vertex-ocr-service-provider-3-cL9cx0"
        }
      ]
    }
  ]
}
